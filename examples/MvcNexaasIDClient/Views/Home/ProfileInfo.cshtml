@{
    ViewData["Title"] = "Profile Info";
}
@model Nexaas.ID.Client.Entities.Profile
<h1>Profile Info</h1>

<div class="row">
    <div class="col-md-8">
        <div>


            <table class="table table-hover">
                <thead>
                <tr>
                    <th colspan="2" class="text-center">
                        <h2>Profile</h2>
                    </th>
                </tr>
                
                </thead>
                <tbody>
                <tr>
                    <td>
                        Id
                    </td>
                    <td>
                        @Model.Id
                    </td>
                </tr>
                <tr>
                    <td>
                        First Name
                    </td>
                    <td>
                        @Model.FirstName
                    </td>
                </tr>
                <tr>
                    <td>
                        Last Name
                    </td>
                    <td>
                        @Model.LastName
                    </td>
                </tr>
                <tr>
                    <td>
                        Full Name
                    </td>
                    <td>
                        @Model.FullName
                    </td>
                </tr>
                <tr>
                    <td>
                        Nickname
                    </td>
                    <td>
                        @Model.Nickname
                    </td>
                </tr>
                <tr>
                    <td>
                        E-mail
                    </td>
                    <td>
                        @Model.Email
                    </td>
                </tr>
                <tr>
                    <td>
                        Birth
                    </td>
                    <td>
                        @Model.Birth?.ToString("yyyy-MM-dd")
                    </td>
                </tr>
                <tr>
                    <td>
                        Gender
                    </td>
                    <td>
                        @Model.Gender
                    </td>
                </tr>
                <tr>
                    <td>
                        Language
                    </td>
                    <td>
                        @Model.Language
                    </td>
                </tr>
                <tr>
                    <td>
                        Picture
                    </td>
                    <td>
                        @Model.Picture
                    </td>
                </tr>
                <tr>
                    <td>
                        Timezone
                    </td>
                    <td>
                        @Model.Timezone
                    </td>
                </tr>
                <tr>
                    <td>
                        City
                    </td>
                    <td>
                        @Model.City
                    </td>
                </tr>
                <tr>
                    <td>
                        Country
                    </td>
                    <td>
                        @Model.Country
                    </td>
                </tr>
                <tr>
                    <td>
                        Bio
                    </td>
                    <td>
                        @Model.Bio
                    </td>
                </tr>
                
                
                <tr>
                    <td colspan="2" class="text-center">
                        <h3>Professional Info</h3>
                    </td>
                </tr>
                <tr>
                    <td>
                        Profession
                    </td>
                    <td>
                        @Model.ProfessionalInfo?.Position
                    </td>
                </tr>
                <tr>
                    <td>
                        Company
                    </td>
                    <td>
                        @Model.ProfessionalInfo?.Company
                    </td>
                </tr>
                <tr>
                    <td>
                        Position
                    </td>
                    <td>
                        @Model.ProfessionalInfo?.Position
                    </td>
                </tr>
                
                @if (Model.Contacts?.PhoneNumbers?.Any() == true)
                {
                    <tr>
                        <td colspan="2" class="text-center">
                            <h3>Contacts</h3>
                        </td>
                    </tr>
                    
                    foreach (var phoneNumber in Model.Contacts.PhoneNumbers)
                    {
                        <tr>
                            <td>
                                Phone Number
                            </td>
                            <td>
                                @phoneNumber
                            </td>
                        </tr>
                    }
                }
                
                @if (Model.Emails?.EmailAddresses?.Any() == true)
                {
                    <tr>
                        <td colspan="2" class="text-center">
                            <h3>Emails</h3>
                        </td>
                    </tr>
                    
                    foreach (var email in Model.Emails.EmailAddresses)
                    {
                        <tr>
                            <td>
                                E-mail
                            </td>
                            <td>
                                @email
                            </td>
                        </tr>
                    }
                }
                
                </tbody>
            </table>
        </div>
    </div>
</div>